{
  "image": "lamoreauxlab.azurecr.io/devcontainer/python:2024.05.0.dev20240509T0058",
  "features": {},
  "customizations": {
    "vscode": {
      "extensions": [
        "esbenp.prettier-vscode",
        "GitHub.copilot",
        "github.vscode-github-actions",
        "hediet.vscode-drawio",
        "IronGeek.vscode-env",
        "lextudio.restructuredtext",
        "ms-azuretools.vscode-docker",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "swyddfa.esbonio",
        "tamasfe.even-better-toml",
        "timonwong.shellcheck",
        "trond-snekvik.simple-rst"
      ],
      // Please keep this file in sync with settings in ./.vscode/settings.default.json
      "settings": {
        "editor.formatOnPaste": false,
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "files.trimTrailingWhitespace": true,
        "python.formatting.provider": "black",
        "shellcheck.useWorkspaceRootAsCwd": true,
        "terminal.integrated.profiles.linux": {
          "zsh": {
            "path": "/usr/bin/zsh"
          }
        },
        "terminal.integrated.defaultProfile.linux": "zsh",
        "[jsonc]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[html]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        }
      }
    }
  },
  "hostRequirements": {
    "cpus": 4,
    "memory": "8gb",
    "storage": "32gb"
  },
  "postCreateCommand": "git config diff.wsErrorHighlight all && pip install -r requirements_dev.txt && pre-commit install && pre-commit run --all-files"
}
